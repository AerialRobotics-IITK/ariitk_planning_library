<?xml version="1.0"?>
<launch>
    <arg name="mav_name" default="firefly"/>

    <group ns="$(arg mav_name)">
        <node pkg="obstacle_detector" type="obstacle_detector_node" name="obstacle_detector_node" output="screen">
            <rosparam file="$(find obstacle_detector)/cfg/params.yaml" command="load" />

            <remap from="cloud" to="vi_sensor/camera_depth/depth/points"/>
        </node>
    </group>

</launch>
